
        <section id="viewhotelDetails">
                <div class="profile"><img src="../static/img/profile.png" alt="default user">
                    <h3>User Info:</h3>
                    <div class="flex">
                        <p>Username:  </p>
                        <p>{{userModel.username}}</p>
                    </div>
                    <div class="flex">
                        <p>Email: </p>
                        <p>{{userModel.email}}</p>
                    </div>
                    <div class="flex">
                        <p>Reservations: </p>
                        <p>
                        {{#if userModel.reservations}}
                           {{#each userModel.reservations}}
                            <span>{{this.name}}</span>
                            {{/each}}
                            {{/if}}
                        </p>
                    </div>
                </div>
        </section>

      